import kotlin.Boolean;

CREATE TABLE GroupEntity (
    groupId TEXT NOT NULL PRIMARY KEY,
    name TEXT NOT NULL,
    members TEXT NOT NULL,
    createdAt INTEGER NOT NULL
);

getAllGroups:
SELECT * FROM GroupEntity ORDER BY createdAt DESC;

getGroupById:
SELECT * FROM GroupEntity WHERE groupId = ?;

insertGroup:
INSERT OR REPLACE INTO GroupEntity(groupId, name, members, createdAt) VALUES ?;

deleteGroup:
DELETE FROM GroupEntity WHERE groupId = ?;

clearAll:
DELETE FROM GroupEntity;